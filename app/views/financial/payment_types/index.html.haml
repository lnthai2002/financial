.container
  %table.table.table-striped
    %thead
      %tr
        %th{'colspan'=>2}= link_to 'Add', new_payment_type_path, class:'btn btn-success btn-block'
    %tbody
      -@payment_types.each do |payment_type|
        %tr
          %td= link_to payment_type.description, edit_payment_type_path(payment_type)
          %td
            = link_to 'Remove', payment_type,
                      data:{confirm: "Remove #{payment_type.description}?"},
                      method: :delete, class: 'btn btn-danger btn-block'

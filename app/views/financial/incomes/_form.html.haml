:javascript
  $(document).ready(function(){
    $(function() {
      $( ".datepicker" ).datepicker({ dateFormat: "yy-mm-dd" });
    });
  });

= form_for(@income) do |f|
  = f.error_messages
  %br
  = f.text_field :pmt_date, :placeholder=>'date', :class=>'datepicker', :size=>10
  %br
  = f.select :category_id, @income_categories.collect{|t| [t['description'], t['id']] }, {:include_blank => false}
  %br
  = f.text_field :amount, :placeholder=>'amount', :size=>10
  %br
  = f.text_field :payee_payer, :placeholder=>'payee/payer'
  %br
  = f.select :payment_type_id, @payment_types.collect{|t| [t['description'], t['id']] }, {:include_blank => false}
  %br
  = f.text_area :note, :placeholder=>'note', :cols => 25, :rows=>2
  %br
  = f.submit 'Done'

= form_tag(:id=>'select_month') do
  %table
    %tr
      %th
        = date_select(@selected_month, :get, {:discard_day =>true, :include_blank=>false})

%fieldset
  %legend Previous month summary
  %table
    - @summaries.each_pair do |category,total|
      %tr{:class=>cycle('even', 'odd')}
        %th=ExpType.get_desc(category)
        %td{:align=>'right'}= number_to_currency(Money.new(total))

%fieldset
  %legend Curent month
  %table{:width=>'90%'}
    %thead
      %tr
        %th Date
        %th Category
        %th Amount
        %th Method of payment
        %th Note
        %th &nbsp;
    %tfoot
      %tr
        %th{:colspan=>'2'} TOTAL
        %th= number_to_currency(@monthly_total)
        %th{:colspan=>'3'} &nbsp;
    %tbody
      - @incomes.each do |i|
        %tr{:class=>cycle('even', 'odd')}
          %td= i.inc_date
          %td= i.income_category.description
          %td= number_to_currency(i.amount)
          %td= i.payment_type.description
          %td= link_to i.note, edit_income_path(i)
          %td= link_to 'Destroy', i, :confirm => 'Are you sure?', :method => :delete
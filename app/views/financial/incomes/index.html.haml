%div{:class=>"panel panel-primary"}
  %div{:class=>"panel-heading"}
    ="#{@incomes["start_date"].strftime("%Y/%m/%d")} - #{@incomes["end_date"].strftime("%Y/%m/%d")}"
  %div{:class=>"panel-body"}
    %div{:class=>"table-responsive"}
      %table.table.table-striped.table-condensed
        %thead
          %tr
            %th Date
            %th Amount
            %th Payer
            %th Category
            %th Method of payment
            %th Note
            %th &nbsp;
        %tfoot
          %tr
            %th{:colspan=>'2'} TOTAL
            %th= number_to_currency(@incomes['total'])
            %th{:colspan=>'4'} &nbsp;
        %tbody
          - @incomes['list'].each do |i|
            %tr
              %td= i.pmt_date.strftime("%m/%d")
              %td= link_to number_to_currency(i.amount), edit_income_path(i)
              %td= i.payee_payer
              %td= i.income_category.description
              %td= i.payment_type.description
              %td= link_to i.note, edit_income_path(i)
              %td= link_to 'Remove', i, :confirm => "Remove #{number_to_currency(i.amount)} on #{i.pmt_date.strftime('%y/%m/%d')}?", :method => :delete
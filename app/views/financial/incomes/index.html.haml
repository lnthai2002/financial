.container
  %div{:class=>"panel panel-primary"}
    %div{:class=>"panel-heading"}
      ="#{@incomes["start_date"].strftime("%Y/%m/%d")} - #{@incomes["end_date"].strftime("%Y/%m/%d")}"
    %div{:class=>"panel-body"}
      %div{:class=>"table-responsive"}
        %table.table.table-striped.table-condensed
          %thead
            %tr
              %th Date
              %th Amount
              %th Payer
              %th Category
              %th Note
          %tfoot
            %tr
              %th TOTAL
              %th= number_to_currency(@incomes['total'])
              %th{'colspan'=>3} &nbsp;
          %tbody
            - @incomes['list'].each do |i|
              %tr
                %td= i.pmt_date.strftime("%m/%d")
                %td= link_to number_to_currency(i.amount), edit_income_path(i)
                %td= i.payee_payer
                %td= description_of_category(i.category_id)
                %td= link_to i.note, edit_income_path(i)

.container
  .panel.panel-default
    .panel-heading
      =link_to incomes_path('start_date'=>@payments["start_date"].prev_month.at_beginning_of_month, 'end_date'=>@payments["start_date"].prev_month.end_of_month) do
        %span.glyphicon.glyphicon-chevron-left
      ="#{@payments["start_date"].strftime("%y/%m/%d")} - #{@payments["end_date"].strftime("%y/%m/%d")}"
      =link_to incomes_path('start_date'=>@payments["start_date"].next_month.at_beginning_of_month, 'end_date'=>@payments["start_date"].next_month.end_of_month) do
        %span.glyphicon.glyphicon-chevron-right
      =link_to new_income_path, remote:true do
        %span.glyphicon.glyphicon-plus.pull-right
    .panel-body
      .table-responsive
        %table.table.table-striped.table-condensed
          %thead
            %tr
              %th Date
              %th Amount
              %th Payer
              %th Category
              %th Note
          %tfoot
            %tr
              %th TOTAL
              %th= number_to_currency(@payments['total'])
              %th{'colspan'=>3} &nbsp;
          %tbody
            - @payments['list'].each do |i|
              %tr
                %td= i.pmt_date.strftime("%m/%d")
                %td= link_to number_to_currency(i.amount), edit_income_path(i), remote:true
                %td= i.payee_payer
                %td= description_of_category(i.category_id)
                %td= link_to i.note, edit_income_path(i), remote:true

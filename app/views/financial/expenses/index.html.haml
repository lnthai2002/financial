= form_tag(:id=>'select_month') do
  %table
    %tr
      %th
        = date_select(@selected_month, :get, {:discard_day =>true, :include_blank=>false})

%fieldset
  %legend Previous month summary
  %table
    - @summaries.each_pair do |category,total|
      %tr{:class=>cycle('even', 'odd')}
        %th=ExpenseCategory.get_desc(category)
        %td{:align=>'right'}= number_to_currency(Money.new(total))

%fieldset
  %legend Curent month
  %table{:width=>'90%'}
    %thead
      %tr
        %th Date
        %th Category
        %th Amount
        %th Payment Method
        %th Note
        %th &nbsp;
    %tfoot
      %tr
        %th{:colspan=>'2'} TOTAL
        %th= number_to_currency(@monthly_total)
        %th{:colspan=>'3'} &nbsp;
    %tbody
      - @expenses.each do |e|
        %tr{:class=>cycle('even', 'odd')}
          %td= e.exp_date
          %td= e.expense_category.description
          %td= number_to_currency(e.amount)
          %td= e.payment_type.description
          %td= link_to e.note, edit_expense_path(e)
          %td
            = link_to 'Break', :controller=>:expenses, :action=>:breakdown, :id=>e.id
            |
            = link_to 'Destroy', e, :confirm => 'Are you sure?', :method => :delete
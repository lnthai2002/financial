= form_for(@category) do |f|
  = f.error_messages
  %fieldset
    %legend Category
    %table
      %tr
        %th= f.select :type, [['Expense','Expense'],['Income','Income']], {:include_blank => false}
      %tr
        %th= f.text_field :description, :placeholder=>"Short description"
      %tr
        %td= f.submit "OK"
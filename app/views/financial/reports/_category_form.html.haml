.modal.fade#form{'tabindex'=>'-1', 'role'=>'dialog', 'aria-hidden'=>'true'}
  .modal-dialog
    .modal-content
      .modal-body
        =form_for :category, url: monthly_for_categories_reports_path do |f|
          -@categories.each do |e|
            .col-xs-12.col-sm-6.col-md-4
              .form-group
                =f.check_box e.description
                =f.label e.description, e.description
          .form-group
            =f.submit 'Generate', class:'btn btn-primary btn-block'
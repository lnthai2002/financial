:javascript
  function drawWeekChart() {
    var options = {'title':'Expense'};
    var data = new google.visualization.arrayToDataTable(#{gc_table_for_summary(@report.week_summary['expense'])});
    var chart = new google.visualization.PieChart(document.getElementById('week_chart'));
    chart.draw(data, options);
  }

  function toggleWeekReport(){//only display week report in portrait
    if(window.innerHeight > window.innerWidth){
      $("#week_summary").show();
      drawWeekChart();
    } else {
      $("#week_summary").hide();
    }
  }

  $(document).ready(function(){
    $("#week_summary_form #date").change(function () {
      $('#week_summary_form').submit();
    })

    //window.addEventListener("orientationchange", function() {
    //  toggleWeekReport();
    //},false);
    
    //toggleWeekReport();
    drawWeekChart();
  });

%div{:class=>"panel panel-primary"}
  %div{:class=>"panel-heading"}
    =form_tag week_summary_reports_url, :id=>'week_summary_form', :method=>'get', :remote=>true, :role=>"form", :class=>"form-inline" do
      .form-group
        =label_tag 'date', "Week"
        =select_tag('date', options_for_select(last_12_weeks, date_for_select(@report.date)), :class=>'form-control')
  %div{:class=>"panel-body"}
    %div{:class=>"col-xs-12 col-md-2"}
      %table.table.table-striped
        %tbody
          %tr
            %th= link_to 'Income', incomes_path('start_date'=>date_for_select(@report.week_summary['start']), 'end_date'=>date_for_select(@report.week_summary['end']))
            %td=@report.week_summary['total_income']
          %tr
            %th= link_to 'Expense', expenses_path('start_date'=>date_for_select(@report.week_summary['start']), 'end_date'=>date_for_select(@report.week_summary['end']))
            %td=@report.week_summary['total_expense']
          %tr
            %th Balance
            %td=@report.week_summary['total_balance']
    %div{:class=>"col-xs-12 col-md-10"}
      #week_chart